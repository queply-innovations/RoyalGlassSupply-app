{
  "name": "royalglasssupply-app",
  "author": {
    "name": "Queply Innovations",
    "email": "hr@queplyinnovations.com",
    "url": "https://queplyinnovations.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/queply-innovations/RoyalGlassSupply-app.git"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "description": "A desktop application made from electron and react.",
  "private": true,
  "version": "1.1.7",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "build:w": "vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.royalglasssupply.app",
    "asar": true,
    "productName": "Royal Glass Supply",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "icon": "public/RGSLOGO.icns",
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-Mac-${version}-Installer.${ext}",
      "icon": "public/RGSLOGO.icns"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Windows-${version}-Setup.${ext}",
      "icon": "public/RGSLOGO.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}-Linux-${version}.${ext}"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-query-devtools": "^5.17.0",
    "@tanstack/react-table": "^8.11.8",
    "@uidotdev/usehooks": "^2.4.1",
    "antd": "^5.16.1",
    "apexcharts": "^3.48.0",
    "axios": "^1.6.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "clx": "^1.0.0",
    "cmdk": "^0.2.1",
    "currency.js": "^2.0.4",
    "date-fns": "^3.3.1",
    "framer-motion": "^11.0.13",
    "lucide-react": "^0.338.0",
    "react": "^18.2.0",
    "react-apexcharts": "^1.4.1",
    "react-datetime-picker": "^5.6.0",
    "react-day-picker": "^8.10.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "react-icons": "^4.12.0",
    "react-loading": "^2.0.3",
    "react-redux": "^9.1.0",
    "react-toastify": "^10.0.5",
    "redux": "^5.0.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "to-fast-properties": "^2.0.0",
    "vite-tsconfig-paths": "^4.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.14.6",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.16",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "react-router-dom": "^6.21.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "homepage": "."
}
